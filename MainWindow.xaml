<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="myApp" Height="180" Width="270">
    <Grid>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="90,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="90,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Button x:Name="btnAuth" Content="Авторизоваться" HorizontalAlignment="Left" FontSize="16" FontFamily="Comic Sans MS" Margin="20,100,0,0" Height="30" Width="195" VerticalAlignment="Top" Click="btnAuth_Click"/>
        <Button x:Name="btnPass" Content="👁️" HorizontalAlignment="Left" Margin="220,65,0,0" VerticalAlignment="Top" PreviewMouseLeftButtonUp="HoldButton_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="HoldButton_PreviewMouseLeftButtonDown"/>
        <PasswordBox x:Name="pboxPassword" HorizontalAlignment="Left" Margin="90,65,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
