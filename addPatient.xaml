<Window x:Class="WpfApp1.addPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="addPatient" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txt_TipPolisa" HorizontalAlignment="Left" Margin="10,240,0,0" TextWrapping="Wrap" Text="тип полиса" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_NomerPolisa" HorizontalAlignment="Left" Margin="10,217,0,0" TextWrapping="Wrap" Text="номер полиса" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Email" HorizontalAlignment="Left" Margin="10,194,0,0" TextWrapping="Wrap" Text="емаил" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Telefon" HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" Text="телефон" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Nomer" HorizontalAlignment="Left" Margin="10,148,0,0" TextWrapping="Wrap" Text="номер" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Seriya" HorizontalAlignment="Left" Margin="10,125,0,0" TextWrapping="Wrap" Text="серия" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_FIO" HorizontalAlignment="Left" Margin="10,79,0,0" TextWrapping="Wrap" Text="фио" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Password" HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" Text="пароль" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_Login" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" Text="логин"  VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dpic_DataRojdeniya" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Height="18" Width="120"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="10,263,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="172,33,58,185"/>
        <Button x:Name="btn_nazad" Content="Вернуться назад" HorizontalAlignment="Left" Margin="10,288,0,0" VerticalAlignment="Top" Width="120" Click="btn_nazad_Click"/>

    </Grid>
</Window>
