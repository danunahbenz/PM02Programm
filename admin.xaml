        <TextBox x:Name="txt_Login" HorizontalAlignment="Left" Margin="260,273,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="233,247,0,0" VerticalAlignment="Top"/>
